@model IEnumerable<ServiceStation.Core.Domain.Product>
@{
    ViewBag.Title = "Shop";
}

<h1>Our products</h1>
<p>Choose whatever you want</p>

<div class="card-group">
    @foreach (var item in Model)
    {
        <div class="card">
            <img class="card-img-top" src="~/img/placeholder.svg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Manufacturer</p>
                <p class="card-text"><small class="text-muted">@item.Category  <br /> @item.Description</small></p>
                <div class="row">
                    <button type="button" class="btn btn-labeled btn-primary">
                <span class="btn-label"><i class="glyphicon glyphicon-camera"></i></span>Camera
                </button>
                </div>
            </div>
        </div>
    }
</div>
