@model IEnumerable<ServiceStation.Core.Domain.Product>
    @{
    ViewBag.Title = "Shop";
    }

    <h1>Our products</h1>
    <p>Choose whatever you want</p>

    <div class="card-group">
        @foreach (var item in Model)
        {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Manufacturer</p>
                <p class="card-text"><small class="text-muted">@item.Category <br /> @item.Description</small></p>
                <div class="row">
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                </div>
            </div>
        </div>
        }
    </div>